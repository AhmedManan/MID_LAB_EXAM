<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <title>ADMIN: View All Employee</title>

  <link rel="stylesheet" href="../../assets/css/admin/bootstrap.min.css">

 


  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>

</head>

<body>
  <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="#">Chotushkon</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse"
      data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <!-- <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search"> -->
    <ul class="navbar-nav px-3">
      <li class="nav-item text-nowrap">
        <a class="nav-link" href="/logout">Sign out</a>
      </li>
    </ul>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="sidebar-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="/admin">
                <span data-feather="home"></span>
                Dashboard <span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/report">
                <span data-feather="file"></span>
                Reports
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/AllEmployeeList">
                <span data-feather="shopping-cart"></span>
                View All Empolyee List
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/notice">
                <span data-feather="users"></span>
                Notice
              </a>
            </li>
          </ul>

        </div>
      </nav>

      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
        <div
          class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard</h1>
          
        </div>  
        <div>
          <h2>All Employee</h2>

          <div class="mt-4">

        <table class="table table-striped table-dark">
          <thead>
            <tr>
              <th scope="col">id</th>
              <th scope="col">username</th>
              <th scope="col">email</th>
              <th scope="col">User Type</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>

            <%


            for(var i=0;i < result.length;i++){

                %>
                <tr>
                    <th scope="row"><%= result[i].id  %></th>
                    <td><%= result[i].username  %></td>
                    <td><%= result[i].email  %></td>
                    <td><%= result[i].type  %></td>
                    <td> 
                      <%


            if(result[i].type=="admin")
            {
              %>

              
              <a class="btn btn-success" href="/admin/viewprofile/<%=result[i].id%>">My Profile</a>
              <%
            } else { %>
              <a class="btn btn-info" href="/admin/viewprofile/<%=result[i].id%>">View Profile</a> 
              <%
            } %>

                
                      
                    </td>
                  </tr>



        <%    }   %>





         
         
         
        </tbody>
        </table>

      </div>
       
      </main>
    </div>
  </div>
 

  <script src="../../assets/css/admin/jquery-3.4.1.min.js"></script>
  <script src="../../assets/css/admin/popper.min.js"></script>
  <script src="../../assets/css/admin/bootstrap.min.js"></script>



</body>

</html>